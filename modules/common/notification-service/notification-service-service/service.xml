<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds"
                 package-path="com.swork.notification.service"
                 auto-namespace-tables="false">
    <namespace>SW_NOTIFICATION</namespace>
    <!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
    <entity local-service="true"
            name="NotificationEntry"
            table="SW_Notification"
            remote-service="false"
            uuid="true"
            external-reference-code="true">

        <!-- PK fields -->

        <column name="id" primary="true" type="long"/>

        <!-- Group instance -->

        <column name="groupId" type="long"/>

        <!-- Audit fields -->

        <column name="companyId" type="long"/>
        <column name="accountId" type="long"/>
        <column name="userName" type="String"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>
        <column name="editorId" type="long"/>
        <column name="businessId" type="long"/>

        <!-- Other fields -->

        <column name="category" type="String" />
        <column name="name" type="String"/>
        <column name="description" type="String"/>
        <column name="status" type="String"/>
        <column name="receiverId" type="long" />
        <column name="subjectId" type="long" />

        <finder name="R_V" return-type="Collection">
            <finder-column name="receiverId"/>
        </finder>

        <finder name="R_S" return-type="Collection">
            <finder-column name="receiverId"/>
            <finder-column name="status"/>
        </finder>

        <finder name="S_" return-type="Collection">
            <finder-column name="subjectId"/>
        </finder>

        <finder name="R_S_B" return-type="Collection">
            <finder-column name="receiverId"/>
            <finder-column name="status"/>
            <finder-column name="businessId"/>

        </finder>
    </entity>


</service-builder>